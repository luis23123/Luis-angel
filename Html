import tempfile, webbrowser, html
from pathlib import Path

def mostrar_personaje(nombre, descripcion):
    safe_name = html.escape(nombre)
    safe_text = html.escape(descripcion).replace("\n", "<br>")

    html_content = f"""<!doctype html>
    <html lang="es">
    <head>
      <meta charset="utf-8">
      <title>Ficha de personaje</title>
      <style>
        body {{ font-family: Arial, sans-serif; display:flex; align-items:center; justify-content:center;
               height:100vh; margin:0; background:#111; color:#eee; }}
        .card {{ background:#222; padding:20px 28px; border-radius:14px; 
               box-shadow:0 0 20px rgba(0,255,128,0.4); max-width:700px; }}
        h1 {{ color:#0f0; }}
      </style>
    </head>
    <body>
      <div class="card">
        <h1>{safe_name}</h1>
        <p>{safe_text}</p>
      </div>
    </body>
    </html>"""

    with tempfile.NamedTemporaryFile("w", delete=False, suffix=".html", encoding="utf-8") as f:
        f.write(html_content)
        path = Path(f.name)

    webbrowser.open(path.as_uri())

# Ejemplo de uso:
mostrar_personaje("Avaricia 777", "Un hombre alto y gruñón al que le encanta el misterioso 'yupisote de Murillo'.")
